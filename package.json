{
  "name": "web-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "crawl:news": "node scripts/crawl-news.js",
    "audit:knowledge": "node scripts/audit-knowledge.js",
    "format": "prettier -w \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "stylelint": "stylelint \"src/**/*.{css,pcss}\"",
    "preview:start": "npm run preview -- --host 127.0.0.1 --port 4173",
    "test:axe": "npm run build && WAIT_ON_TIMEOUT=120000 start-server-and-test preview:start http://127.0.0.1:4173 \"axe http://127.0.0.1:4173 --timeout 60000 --exit\"",
    "test:lighthouse": "echo \"skip lhci in CI\"",
    "visualize": "vite build --report",
    "prepare": "husky install",
    "generate:knowledge": "node scripts/generate-knowledge.mjs",
    "clarify:knowledge": "node scripts/clarify-knowledge.mjs",
    "test:smoke": "npm run build && node scripts/smoke-test.mjs",
    "test:e2e": "npm run build && npm run preview -- --host 127.0.0.1 --port 4173 & playwright test --config tests/playwright.config.js && kill $(Get-Process -Name node -ErrorAction SilentlyContinue | Select-Object -First 1 -Expand Id)"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.11",
    "@vercel/analytics": "^1.6.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "katex": "^0.16.25",
    "lucide-react": "^0.554.0",
    "mermaid": "^11.12.1",
    "openai": "^6.9.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-katex": "^3.1.0",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.0",
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "start-server-and-test": "^2.0.3",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-standard": "28.0.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,md}": [
      "prettier -w",
      "eslint --fix"
    ]
  }
}
